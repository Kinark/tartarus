{
   "presets": [
      [
         "@babel/preset-env",
         {
            "targets": { "node": 7 },
            "useBuiltIns": "usage"
         }
      ],
      "@babel/preset-react"
   ],
   "plugins": [
      "add-module-exports",
      "react-hot-loader/babel",
      [
         "module-resolver",
         {
            "root": ["./src"],
            "alias": {
               "~": "./src"
            }
         }
      ]
   ],
   "env": {
      "production": {
         "presets": ["react-optimize"],
         "plugins": ["dev-expression", ["babel-plugin-styled-components", { "displayName": false }]]
      },
      "development": {
         "plugins": ["transform-class-properties", "babel-plugin-styled-components"]
      }
   }
}
